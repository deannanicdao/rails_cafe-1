<%= form_with model: @item, local: true do |f| %>
<div>
    <%= f.label :item %>
    <%= f.text_field :item %>
</div>
<div>
    <%= f.label :price %>
    <%= f.number_field :price, step: 0.01, min: 0.5 %>
</div>
<div>
    <%= f.label :quantity %>
    <%= f.number_field :quantity, min: 1 %>
</div>
<div>
    <%= f.label :image %>
    <%= f.file_field :image %>
</div>
<div>
    <%= f.label :menus %>
    <%= f.collection_check_boxes :menu_ids, @menus, :id, :title %>
</div>
<div>
    <%= f.submit %>
</div>
<% end %>